source ~/.vimrc

" Relative numbers & current line number
set relativenumber
set number

map ,wh :action VimWindowSplitHorizontal<CR>
map ,wv :action VimWindowSplitVertical<CR>
map ,wx :action VimWindowClose<CR>
map ,wc :action VimWindowOnly<CR>
map ,wo :action CloseAllEditorsButActive<CR>
map ,wu :action UnsplitAll<CR>

map ,h :action VimWindowLeft<CR>
map ,j :action VimWindowDown<CR>
map ,k :action VimWindowUp<CR>
map ,l :action VimWindowRight<CR>
map ,x :action CloseContent<CR>
map ,s :action MoveEditorToOppositeTabGroup<CR>

map <S-k> :action VimMotionNextTab<CR>
map <S-j> :action VimMotionPreviousTab<CR>

" Run from context
map ,r :action DebugClass<CR>
map ,R :action RunClass<CR>
