###############################################################################
# i3 status config
# see "man i3status" for documentation.
###############################################################################

general {
    interval = 1
    colors = true
    color_good = '#88b090'
    color_degraded = '#ccdc90'
    color_bad = '#e89393'
}

order += "cpu_usage 0"
order += "disk /"
order += "volume master"
order += "battery 0"
order += "tztime local"

cpu_usage {
    format = "⚙️ %usage"
    max_threshold = 80
}

disk "/" {
    format = "💽 %avail/%total"
    prefix_type = custom
    low_threshold = 20
    threshold_type = percentage_avail
}

volume master {
    format = "🔉 %volume"
    format_muted = "🔇"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

battery 0 {
    format = "%status %percentage"
    format_down = ""
    last_full_capacity = true
    integer_battery_capacity = true
    low_threshold = 25
    threshold_type = percentage
    hide_seconds = true
    status_chr = "⚡"
    status_bat = "🔋"
    status_unk = "?"
    status_full = "☻ "
}

tztime local {
    format = "%Y-%m-%d %H:%M:%S %Z"
}

