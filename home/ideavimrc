set relativenumber
set number
set scrolloff=3
set ignorecase smartcase
set showmode
set history=1000
set clipboard=unnamed,unnamedplus

" Reload config
map ,wr :source ~/.ideavimrc<CR>

" Easy system clipboard copy/paste
noremap <space>y "*y
noremap <space>Y "*Y
noremap <space>p "*p
noremap <space>P "*P

" Easy window navigation
nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-h> <c-w>h
nnoremap <c-k> <c-w>k

" Common operations
nnoremap <space>q :action CloseContent<CR>
nnoremap <space>Q :action ReopenClosedTab<cr>

" Window operations
nnoremap <space>wo :action CloseAllEditorsButActive<CR>
nnoremap <space>wq :action CloseAllEditors<CR>
nnoremap <space>wm :action MoveEditorToOppositeTabGroup<CR>
nnoremap <space>wu :action UnsplitAll<CR>
nnoremap <space>h :action MoveTabDown<CR>
nnoremap <space>v :action MoveTabRight<CR>

" Run from context
nnoremap \r :action RunClass<CR>
nnoremap \d :action DebugClass<CR>

" Code
nnoremap \f :action ReformatCode<CR>
nnoremap \u :action FindUsages<CR>

" Code navigation
nnoremap [ :action EditorCodeBlockStart<CR>
nnoremap ] :action EditorCodeBlockEnd<CR>
map <C-Left> :action JumpToLastChange<CR>
map <C-Right> :action JumpToNextChange<CR>
nnoremap J 5j
nnoremap K 5k

" Maven

nnoremap \m :action Maven.ReimportProject<CR>
